<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ph.edu.ust.iicscloudauthenticator.Code"
    android:background="@drawable/background"
    android:textAlignment="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="40dp"
        android:textAlignment="center"
        android:textColor="@color/light"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAdd"
        android:textSize="16sp"
        android:text="1.) You will get the generate code above"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:textColor="@color/light"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="2.) The website(OwnCloud) will ask for a code"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tvAdd"
        android:layout_alignLeft="@+id/tvAdd"
        android:layout_alignStart="@+id/tvAdd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="3.) Input the generated code in the OwnCloud"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tvEmail"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/light"
        android:textSize="16sp"
        android:text="5.) Then click 'Submit' to access the OwnCloud"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="16sp"
        android:text="4.) The application will receive the generated code from the webserver to be typed"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView10"
        android:textColor="@color/light"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />


    <TextView
        android:text="Passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/tvCode"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
