<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context="ph.edu.ust.iicscloudauthenticator.SupportFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="2.) The e-mail contains the recovery code"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tvAdd"
        android:layout_alignLeft="@+id/tvAdd"
        android:layout_alignStart="@+id/tvAdd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="3.) After you input the recovery code, you will now be able to bind your account to a new device"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tvEmail"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail"
        android:textAlignment="textStart" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAdd"
        android:textSize="16sp"
        android:text="1.) You will receive an e-mail from OwnCloud"
        android:layout_marginTop="63dp"
        android:textColor="@color/light"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/sendRecovery"
        android:layout_alignStart="@+id/sendRecovery" />

    <TextView
        android:text="Recovery Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@color/light"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/light"
        android:textSize="16sp"
        android:text="4.) Then click 'Submit' to access your OwnCloud"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <Button
        android:text="SEND RECOVERY CODE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recoveryBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />

</RelativeLayout>
