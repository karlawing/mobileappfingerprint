<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context="ph.edu.ust.iicscloudauthenticator.CodeFragment">

    <TextView
        android:text="Everytime you log in to your OwnCloud account, you'll be asked to enter the generated code above. The code changes every 1 minute and can be used only once."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView17"
        android:textColor="#898989"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:src="@drawable/footer"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        android:textSize="30sp" />

    <ImageView android:src="@drawable/code_circle"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="200dp"
        android:layout_width="80dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_marginTop="72dp"
        android:id="@+id/codeTv"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

    <TextView
        android:text="Enter this verification code to sign in to your OwnCloud Account."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textColor="#FFFF"
        android:gravity="center_vertical"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

</RelativeLayout>
