<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context="ph.edu.ust.iicscloudauthenticator.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAdd"
        android:textSize="16sp"
        android:text="1.) Login through your credentials in OwnCloud website"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:textColor="@color/light"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="2.) The website(OwnCloud) will ask for a code"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tvAdd"
        android:layout_alignLeft="@+id/tvAdd"
        android:layout_alignStart="@+id/tvAdd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="3.) Press the upper left bar ->Passcode"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tvEmail"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/light"
        android:textSize="16sp"
        android:text="5.) Enter the generated code to the site "
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="16sp"
        android:text="4.) The application will receive the generated code from the webserver to be typed"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView10"
        android:textColor="@color/light"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="How to use:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imgLogo"
        android:layout_toRightOf="@+id/imgLogo"
        android:layout_toEndOf="@+id/imgLogo"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <ImageView
        android:layout_height="80dp"
        android:id="@+id/imgLogo"
        android:src="@drawable/logo2"
        android:padding="20dp"
        android:layout_width="80dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvAdd"
        android:layout_alignStart="@+id/tvAdd" />

    <TextView
        android:text="IICS Cloud Mobile Authenticator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:paddingBottom="20dp"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_above="@+id/textView5"
        android:layout_alignRight="@+id/tvEmail"
        android:layout_alignEnd="@+id/tvEmail"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
